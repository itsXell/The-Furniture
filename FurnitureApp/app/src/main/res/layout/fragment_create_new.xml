<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".User.LoginFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/custom"
        android:layout_toRightOf="@+id/back_btn"/>

    <TextView
        android:id="@+id/create_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Create New"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/custom"
        android:layout_below="@+id/back_btn"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"/>

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:layout_below="@id/create_new"
        android:hint="First Name"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/custom"
        android:drawableLeft="@drawable/user_left"/>

    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:layout_below="@id/first_name"
        android:hint="Last Name"
        android:padding="10dp"
        android:fontFamily="@font/custom"
        android:layout_margin="5dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/user_left"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:layout_below="@id/last_name"
        android:hint="Email"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/custom"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/email_left"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:layout_below="@id/email"
        android:hint="Password"
        android:padding="10dp"
        android:fontFamily="@font/custom"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/password_left"/>

    <EditText
        android:id="@+id/reenter_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:layout_below="@id/password"
        android:hint="Re-Enter Password"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/custom"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/password_left"/>
    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:layout_below="@id/reenter_password"
        android:hint="Address"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/custom"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/address_left"/>

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:layout_below="@id/address"
        android:hint="Phone Number"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/custom"
        android:inputType="number"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/phonenb_left"/>

    <EditText
        android:id="@+id/create_new_btn"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/red_cell"
        android:layout_below="@id/phone_number"
        android:layout_centerHorizontal="true"
        android:text="Create"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/custom"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" />
        </RelativeLayout>
    </LinearLayout>>
</ScrollView>