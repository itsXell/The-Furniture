<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_new_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/background"
    tools:context=".views.user.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/create_new_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/back_btn"
                android:fontFamily="@font/custom"
                android:text="Create New"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/create_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/back_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/custom"
                android:text="Welcome, New User"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/create_new"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/user_left"
                android:drawablePadding="10dp"
                android:fontFamily="@font/custom"
                android:inputType="text"
                android:hint="User Name"
                android:padding="10dp" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/user_name"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/password_left"
                android:drawablePadding="10dp"
                android:fontFamily="@font/custom"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp" />

            <EditText
                android:id="@+id/reenter_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/password"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/password_left"
                android:drawablePadding="10dp"
                android:fontFamily="@font/custom"
                android:hint="Re-Enter Password"
                android:inputType="textPassword"
                android:padding="10dp" />
            <TextView
                android:id="@+id/user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="User Information"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/custom"
                android:layout_below="@id/reenter_password"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/user_info"
                android:background="@color/light_grey"/>
            <Button
                android:id="@+id/male"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Male"
                android:fontFamily="@font/custom"
                android:textAllCaps="false"
                android:background="@drawable/border"
                android:layout_margin="5dp"
                android:layout_below="@id/user_info"/>
            <Button
                android:id="@+id/female"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Female"
                android:fontFamily="@font/custom"
                android:layout_toRightOf="@id/male"
                android:textAllCaps="false"
                android:background="@drawable/border"
                android:layout_margin="5dp"
                android:layout_below="@id/user_info"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/male"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/user_left"
                android:drawablePadding="10dp"
                android:fontFamily="@font/custom"
                android:inputType="text"
                android:hint="First Name"
                android:padding="10dp" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/first_name"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/user_left"
                android:drawablePadding="10dp"
                android:fontFamily="@font/custom"
                android:inputType="text"
                android:hint="Last Name"
                android:padding="10dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/last_name"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/email_left"
                android:drawablePadding="10dp"
                android:fontFamily="@font/custom"
                android:hint="Email"
                android:padding="10dp" />


            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/email"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/phonenb_left"
                android:drawablePadding="10dp"
                android:fontFamily="@font/custom"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="10dp" />
