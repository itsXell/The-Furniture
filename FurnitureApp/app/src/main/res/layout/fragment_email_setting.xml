<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/email_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".views.user.PasswordSettingFragment">

    <ImageView
        android:id="@+id/email_setting_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="25dp"
        android:layout_toRightOf="@id/email_setting_back"
        android:fontFamily="@font/custom"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/email_setting_back"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/email_setting_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user"
            android:layout_marginLeft="170dp"
            android:layout_below="@id/email_setting_back"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/email_setting_new_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="New Email"
        android:fontFamily="@font/custom"
        android:padding="10dp"/>


    <Button
        android:id="@+id/email_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/red_cell"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/custom"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="310dp"
        android:focusable="false"
        android:layout_marginBottom="10dp"
        android:padding="10dp"/>
    </LinearLayout>


</RelativeLayout>