<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".views.product.ProductFragment">
    <TextView
        android:id="@+id/purchase_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Purchase Detail"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/custom"/>

    <RelativeLayout
        android:layout_below="@id/purchase_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/pur_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pur_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/custom"
            android:text="Name: " />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/custom"
            android:text="Code: " />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/code"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/custom"
            android:text="Price: " />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/custom"
            android:text="Amount: " />

        <TextView
            android:id="@+id/pur_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pur_img"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/name"
            android:fontFamily="@font/custom"
            android:text="" />

        <TextView
            android:id="@+id/pur_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pur_name"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/name"
            android:fontFamily="@font/custom"
            android:text="" />

        <TextView
            android:id="@+id/pur_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pur_code"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/name"
            android:fontFamily="@font/custom"
            android:text="" />

        <EditText
            android:id="@+id/pur_reduce"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/pur_price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/amount"
            android:gravity="center"
            android:focusable="false"
            android:fontFamily="@font/custom"
            android:background="@drawable/border"
            android:text="-" />

        <EditText
            android:id="@+id/buy_amount"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_below="@id/pur_price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/pur_reduce"
            android:gravity="center"
            android:text="1"
            android:fontFamily="@font/custom"
            android:background="@drawable/border"
            android:inputType="number" />

        <EditText
            android:id="@+id/pur_increase"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/pur_price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:focusable="false"
            android:fontFamily="@font/custom"
            android:layout_toRightOf="@id/buy_amount"
            android:background="@drawable/border"
            android:text="+" />


        <Button
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/amount"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/border"
            android:padding="5dp"
            android:text="Cancel"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:fontFamily="@font/custom"
             />

        <Button
            android:id="@+id/purchase"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/amount"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border"
            android:padding="5dp"
            android:text="Next"
            android:textAllCaps="false"
            android:fontFamily="@font/custom"
            />
    </RelativeLayout>


</RelativeLayout>