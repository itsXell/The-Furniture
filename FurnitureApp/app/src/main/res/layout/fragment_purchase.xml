<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Product.ProductFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/pur_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pur_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Name: " />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Code: " />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/code"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Price: " />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Amount: " />

        <TextView
            android:id="@+id/pur_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pur_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/name"
            android:text="" />

        <TextView
            android:id="@+id/pur_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pur_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/name"
            android:text="" />

        <TextView
            android:id="@+id/pur_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pur_code"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/name"
            android:text="" />

        <Button
            android:id="@+id/reduce"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/pur_price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/amount"
            android:background="@drawable/circle_button"
            android:text="-" />

        <EditText
            android:id="@+id/buy_amount"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_below="@id/pur_price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/reduce"
            android:background="@drawable/border"
            android:inputType="number" />

        <Button
            android:id="@+id/increase"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/pur_price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/buy_amount"
            android:background="@drawable/circle_button"
            android:text="+" />


        <Button
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/amount"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/red_cell"
            android:padding="5dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/purchase"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/amount"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/red_cell"
            android:padding="5dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>


</RelativeLayout>