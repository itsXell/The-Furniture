<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.user.UnRegisterFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/custom"
        android:text="Welcome To Furniture"/>

    <EditText
        android:id="@+id/login_or_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_below="@+id/title"
        android:background="@drawable/red_cell"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Login / Create New"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/custom"
        android:layout_marginRight="10dp"/>



</RelativeLayout>