<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_name_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".views.user.UserNameFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <ImageView
        android:id="@+id/user_name_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/back" />
    <TextView
        android:id="@+id/user_name_back_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_name_back"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text="User Name"
        android:fontFamily="@font/custom"
        android:layout_marginTop="15dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/user_name_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/user"
        android:layout_below="@id/user_name_back"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/user_name_firstname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:layout_below="@id/user_name_img"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="First Name"
        android:fontFamily="@font/custom"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/user_name_lastname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:layout_below="@id/user_name_firstname"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Last Name"
        android:fontFamily="@font/custom"
        android:padding="10dp"/>

        <EditText
            android:id="@+id/user_name_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/user_name_lastname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            android:fontFamily="@font/custom"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />
    <Button
        android:id="@+id/user_name_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/custom"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:focusable="false"
        android:layout_marginBottom="10dp"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:textAllCaps="false"
        android:cursorVisible="false"
        android:layout_marginTop="180dp"
        android:padding="10dp"/>

    </LinearLayout>
</RelativeLayout>