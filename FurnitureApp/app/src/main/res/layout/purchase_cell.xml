<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/con_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp" />
    <TextView
    android:id="@+id/con_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/con_img"
    android:text="Wooden Table"
    android:fontFamily="@font/custom"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
    android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/con_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:text="001"
        android:fontFamily="@font/custom"
        android:layout_below="@id/con_name"
        android:layout_toRightOf="@id/con_img"/>
    <TextView
        android:id="@+id/con_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/con_code"
        android:layout_toRightOf="@+id/con_img"
        android:fontFamily="@font/custom"
        android:textColor="@color/orange"
        android:text="Delivery on 8-Apr"/>
    <TextView
        android:id="@+id/con_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/custom"
        android:textColor="@color/black"
        android:text="2,000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/con_price"
        android:text="฿"
        android:layout_marginRight="2dp"
        android:fontFamily="@font/custom"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/con_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/con_price"
        android:fontFamily="@font/custom"
        android:text="x1"/>
    <TextView
        android:id="@+id/con_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"
        android:layout_alignParentBottom="true"
        android:text="2,000"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/baht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/con_total"
        android:text="฿"
        android:layout_marginRight="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/baht"
        android:text="Total:"
        android:layout_marginRight="5dp"/>
